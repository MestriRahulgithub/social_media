        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"
        integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa"
        crossorigin="anonymous"></script>

    <style>
        .img {
            background-image: url("https://images.freecreatives.com/wp-content/uploads/2015/03/Huge-Backgrounds-63.jpg");
            background-size: cover;
            background-repeat: no-repeat;
        }
        .container-fluid{
            padding-top: 10%;
            
        }
        .col-lg-6{
            padding-right: 10%;
            
        }
    </style>
</head>

<body class="img">
    <section>
        <div class="container-fluid">
            <form class="row g-3" action="/addregister" method="post">
                <div class="row">
                    <div class="col-lg-4">
                        
                    </div>

                    <div class="col-lg-6 ">
                        <h2 style="text-align: center; background-color:navy"><span style="color:white;">Registration Form for Social Media</span></h2>
                        <table class="table">
                            <tr>
                                <td>profile ID</td>
                            </tr>
                            <tr>
                                <td><input type="text" class="form-control" id="profile" name="profile"></td>
                            </tr>

                            <tr>
                                <td>Name</td>
                            </tr>
                            <tr>
                                <td><input type="text" class="form-control" id="name" name="name"></td>
                            </tr>

                            <tr>
                                <td>Headline</td>
                            </tr>
                            <tr>
                                <td><input type="text" class="form-control" id="inputAddress" name="headline"
                                        placeholder="Enter a headline describing yourself"></td>
                            </tr>

                            <tr>
                                <td>Password</td>
                            </tr>
                            <tr>
                                <td><input type="password" class="form-control" id="password" name="password"></td>
                            </tr>

                            <tr>
                                <td>Confirm Password</td>
                            </tr>
                            <tr>
                                <td><input type="pawword" class="form-control" id="cpassword" name="cpassword"></td>
                            </tr>

                            <tr>
                                <td><button type="submit" class="btn btn-primary">Register</button></td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-lg-4">

                    </div>

                    <div class="col-lg-4">

                    </div>

                    <div class="col-lg-4">

                    </div>
                </div>
            </form>
        </div>
    </section>
</body>

</html>